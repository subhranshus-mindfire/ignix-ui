{
  "name": "ignix-ui",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=!./apps/storybook",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "release": "changeset publish",
    "version": "changeset version",
    "build:packages": "turbo run build --filter=./packages/*",
    "test:ci": "turbo run test --filter=./packages/*",
    "docs:dev": "pnpm --filter docs start",
    "poc:dev": "turbo run dev --filter=poc",
    "docs:build": "pnpm --filter docs build",
    "docs:deploy": "turbo run deploy --filter=docs",
    "clean": "turbo run clean && pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "changeset:autogenerate": "node .github/changeset-autogenerate.mjs",
    "storybook": "pnpm --filter storybook storybook",
    "build-storybook": "pnpm --filter storybook build",
    "vitest": "vitest",
    "vitest:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.0.0",
    "turbo": "^2.4.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint ."
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7"
  }
}
